% その環境を索引に追加したければ|\E|命令を使います．
%    \begin{macrocode}
\newcommand*{\env}[1]{\texttt{#1}}%
\newcommand*{\E}[1]{%
   \index{環境!#1@\texttt{#1}}%
   \glossary{#1かんきよう@\texttt{#1}環境}%
   \texttt{#1}}%
