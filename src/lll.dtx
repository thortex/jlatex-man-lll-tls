%    \begin{macrocode}
\def\optionlist#1{%
   \@tempcnta=\z@ \@tempcntb=\z@
   \@for\member:=#1\do{\advance\@tempcnta\@ne}%
   \@for\member:=#1\do{\advance\@tempcntb\@ne
      \ifnum\@tempcntb<\@tempcnta
            \textsl{\member}，%
      \else
         \ifnum\@tempcntb=\@tempcnta
             \textsl{\member}%
        \fi
      \fi
   }%
}
\def\Optionlist#1{%
   \@tempcnta=\z@ \@tempcntb=\z@
   \@for\member:=#1\do{\advance\@tempcnta\@ne}%
   \@for\member:=#1\do{\advance\@tempcntb\@ne
      \ifnum\@tempcntb<\@tempcnta
         \index{\member @\textsl{\member}}%
         \index{オプション!\member @\textsl{\member}}%
         \textsl{\member}，%
      \else
          \ifnum\@tempcntb=\@tempcnta
             \index{\member @\textsl{\member}}%
             \index{オプション!\member @\textsl{\member}}%
             \textsl{\member}%
          \fi%
      \fi
   }%
}
